{
  "name": "documatic",
  "displayName": "Documatic",
  "description": "Connect with Documatic right from VSCode",
  "version": "0.0.1",
  "publisher": "documatic",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:documatic.refreshDocumaticInfoFromStore",
    "onCommand:documatic.showSearchBox",
    "onCommand:documatic.helloWorld",
    "onCommand:documatic.login",
    "onUri",
    "onStartupFinished",
    "onView:documatic:home_search_results"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    
    "commands": [
      {
        "command": "documatic.helloWorld",
        "title": "Hello World",
        "category": "Documatic"
      },
      {
        "command": "documatic.login",
        "title": "Login",
        "category": "Documatic"
      },
      {
        "command": "documatic.refreshDocumaticInfoFromStore",
        "title": "Refresh",
        "category": "Documatic",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "documatic.showSearchBox",
        "title": "Search",
        "category": "Documatic",
        "icon": "$(search-view-icon)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "documatic",
          "title": "Documatic",
          "icon": "src/assets/img/symbol.svg"
        }
      ]
    },
    "views": {
      "documatic": [
        {
          "id": "documatic:login",
          "when": "!documatic.isLoggedIn",
          "name": "Login"
        },
        {
          "id": "documatic:home",
          "when": "documatic.isLoggedIn",
          "name": "Projects"
        },
        {
          "id": "documatic:home_search_results",
          "when": "documatic.have_search_results",
          "name": "Search Results"
        },
        {
          "id": "documatic:home_organisations",
          "when": "documatic.isLoggedIn",
          "name": "Organisations"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "documatic:login",
        "contents": "You have not yet signed in with Documatic\n[Sign in](command:documatic.login)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "documatic.refreshDocumaticInfoFromStore",
          "when": "view =~ /^documatic/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "uuid": "^9.0.0"
  }
}
